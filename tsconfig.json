{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ngx-sharebuttons": [
        "projects/ngx-sharebuttons/src/public-api"
      ],
      "ngx-sharebuttons/button": [
        "projects/ngx-sharebuttons/button/src/public_api"
      ],
      "ngx-sharebuttons/buttons": [
        "projects/ngx-sharebuttons/buttons/src/public_api"
      ],
      "ngx-sharebuttons/popup": [
        "projects/ngx-sharebuttons/popup/src/public_api"
      ],
      "ngx-sharebuttons/icons": [
        "projects/ngx-sharebuttons/icons/src/public_api"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
